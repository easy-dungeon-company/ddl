{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://easy-dungeon-company.github.io/ddl/schemas/components.json",
    "title": "DDL Assetpack Components",
    "description": "The collection of components within an assetpack.",
    "type": "object",
    "properties": {
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "A friendly name for this component.",
                        "type": "string"
                    },
                    "id": {
                        "description": "A unique identifier for this component within the assetpack.",
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "parts": {
                        "description": "The individual parts which make up the component.",
                        "type": "array"
                    },
                    "tags": {
                        "description": "Tags which describe this component.",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "^[a-z0-9-]+$"
                        }
                    }
                },
                "required": [
                    "id",
                    "parts"
                ],
                "additionalProperties": false
            }
        },
        "grid": {
          "type": "object",
          "properties": {
            "type": {
                "description": "Isometric or Topdown",
                "type": "string",
                "enum": ["isometric",
                        "topdown"]
                },
                "height": {
                    "description": "pixel height of a grid square (top to bottom)",
                    "type": "integer",
                    "minimum": 1
                },
                "width": {
                    "description": "pixel width of a grid square (top to bottom)",
                    "type": "integer",
                    "minimum": 1
                }
            },
            "required": [
                "type",
                "height",
                "width"
            ],
            "additionalProperties": false
        },
        "additionalProperties": false
    }
}
